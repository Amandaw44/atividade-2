programa {
  funcao inicio() {
    inteiro tamanhoPedaco = 45
    inteiro tamanhoTabua, pedacos, desperdicio

    tamanhoTabua = 3 * 100 
    pedacos = tamanhoTabua / tamanhoPedaco
    desperdicio = tamanhoTabua % tamanhoPedaco

    escreva("Para tabuas de ", tamanhoTabua, "em você terá ", pedacos, " pedaços e sobrarão", desperdicio, "cm. \n")
    
    tamanhoTabua = 4 * 100 
    tamanhoTabua / tamanhoPedaco
    desperdicio = tamanhoTabua % tamanhoPedaco
    
    escreva("Para tabuas de ", tamanhoTabua,"em você terá ", pedacos, " pedaços e sobrarão ", desperdicio, "cm. \n")
    
    tamanhoTabua = 5 * 100 
    pedacos = tamanhoTabua / tamanhoPedaco
    desperdicio = tamanhoTabua % tamanhoPedaco 
    
    escreva("Para tabuas de ", tamanhoTabua, "em você terá", pedacos, " pedaços e sobrarão", desperdicio, "cm. \n")
  }
}
