programa
{
	
	funcao inicio()
	{
		inteiro idade
		inteiro soma_idade

		escreva("qual sua idade?")
		leia (idade)
		
		soma_idade = idade * (idade+1)/2

		escreva ("a soma de todas as idades que você ja teve é ",soma_idade," ")
		
	}
}
